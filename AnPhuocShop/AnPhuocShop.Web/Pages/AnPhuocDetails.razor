@page "/anphuocdetails/{id}"
@inherits AnPhuocDetailsBase

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@AnPhuoc.Tensp</h1>;
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@AnPhuoc.Hinhanh" />
                <h4>@AnPhuoc.AnPhuocId</h4>
                <h4>@AnPhuoc.Hoatiet</h4>
                <h4>@AnPhuoc.LoaispId</h4>
                <h5 style="text-align: left">@AnPhuoc.Thongtin</h5>
                <h3 style="color: red">@AnPhuoc.Gia</h3>;
            </div>

            <div class="card-footer text-center">
                <a href="/" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div> 
