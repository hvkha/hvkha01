@page "/"
@inherits AnPhuocListBase
<div class="card-deck">
    @foreach (var anphuoc in AnPhuocs)
            {
    <div class="card m-3" style="min-width:18rem; max-width:30%;">

        <div class="card-header">
            <h5> @anphuoc.Tensp </h5>
        </div>

        <img class="imageThumbnail" src="@anphuoc.Hinhanh " />
        <div style="text-align: center; color: red">Giá: @anphuoc.Gia</div>

        <div class="card-footer text-center">

            <a href="@($"anphuocdetails/{anphuoc.AnPhuocId}")" class="btn btn-primary m-1"> View </a>
            <a href="#" class="btn btn-primary m-1"> Edit </a>
            <a href="#" class="btn btn-danger m-1"> Delete </a>

        </div>

    </div>
            }
</div>
